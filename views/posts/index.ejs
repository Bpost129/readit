<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/index.css">
<%- include('../partials/nav') %>

<main>
  <div>
    <% posts.reverse() %>
    <% posts.forEach(post => { %>
      <div class="post-div">
        <div class="author-div">
          <img class="avatar" src="<%= post.author.avatar %>" alt="avatar">
          <p class="author"><%= post.author.name %></p>
        </div>
        <div class="content-div">
          <a href="/posts/<%= post._id %>"><%= post.title %></a>
          <p><%= post.text %></p>
        </div>
        <div class="social-div">
          <div class="social-btn">
            <div><i class="fas fa-solid fa-angle-up" style="color: white;"></i></div>
            Likes
            <div><i class="fas fa-solid fa-angle-down" style="color: white;"></i></div>
          </div>
          <div class="social-btn">Comments</div>
        </div>
      </div>
    <% }) %>
  </div>
</main>

<%- include('../partials/footer') %>